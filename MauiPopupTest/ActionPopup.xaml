<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiPopupTest.ActionPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MauiPopupTest.ViewModels"
    x:DataType="viewmodels:ActionPopupViewModel">

    <VerticalStackLayout>

        <Label
            HorizontalOptions="Center"
            Text="{Binding Message}"
            TextColor="Black"
            VerticalOptions="Center" />

        <Button Command="{Binding PopupClosedCommand}" Text="Close" />

    </VerticalStackLayout>

</ContentView>
