<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiPopupTest.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MauiPopupTest.ViewModels"
    x:DataType="viewmodels:MainViewModel"
    Shell.NavBarHasShadow="True">

    <ScrollView>

        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"
                Source="dotnet_bot.png" />

            <Label Style="{StaticResource Headline}" Text="Hello, World!" />

            <Label Style="{StaticResource SubHeadline}" Text="Welcome to &#10;.NET Multi-platform App UI" />

            <Button Command="{Binding DisplayAlertCommand}" Text="Show Alert" />

            <Button Command="{Binding DisplayModalCommand}" Text="Show ContentPage modally" />

            <Button Command="{Binding DisplayPopupCommand}" Text="Show .NET MAUI Community Toolkit Popup" />

            <Button Command="{Binding DisplayToastCommand}" Text="Show .NET MAUI Community Toolkit Toast" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
